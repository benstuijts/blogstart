<% include ./_html/head %>
<% include ./_elements/navigation-top-bar %>

<div class="container">
    <% include ./_elements/message-bar %>
    <h2>All articles | List layout</h2>
    <ul class="list-group">
    <% articles.forEach(function(article){ %>
    
        <li class="list-group-item">
            <a href="<%= baseUrl %><%= article.slug %>"><%= article.title %></a>
            <div class="pull-right">
                <i class="fa fa-thumbs-up" aria-hidden="true"></i> <%= article.like.length %>
                <i class="fa fa-eye" aria-hidden="true"></i> <%= article.views %>
            </div>
        </li>  
        
    <% }) %>  
    </ul>  
</div>

<div class="container">
    <h2>All articles | Grid layout</h2>
    <% articles.forEach(function(article){ %>
        <a href="<%= baseUrl %><%= article.slug %>" class="box" title="<%=article.title%>" style="background-color: <%= article.backgroundColor %>; background-image: url(<%= article.image %>)">
            <h3 class="box-title"><%= article.title %></h3>
            <div class="box-likes">
                <i class="fa fa-thumbs-up" aria-hidden="true"></i> <%= article.like.length %>
            </div>
            <div class="box-views">
                <i class="fa fa-eye" aria-hidden="true"></i> <%= article.views %>
            </div>
        </a>
    <% }) %>  
</div>


<% include ./_html/scripts %>

<style>
    .box {
        background-position:center;
        background-size: cover;
        background-repeat: no-repeat;
        display: inline-block;
        position: relative;
        width: 25%;
        min-width: 240px;
        float: left;
        transition: all 500ms ease-in-out;
    }
    .box:hover {
        transform:scale(1.1);
        z-index: 2;
        cursor: pointer;
    }
    .box:before{
        content: "";
        display: block;
        padding-top: 100%;
    }
    .box-title {
        position: absolute;
        bottom: 10px;
        background: rgba(200,200,200,.7);
        color: black;
        width: 100%;
        padding: 5px;
        text-shadow: 1px 1px 1px white;
    }
    .box-likes {
        position: absolute;
        top: 10px; left:10px;
        background: rgba(200,200,200,.3);
        color: black;
        padding: 3px 8px;
    }
    .box-views {
        position: absolute;
        top: 10px; right:10px;
        background: rgba(200,200,200,.3);
        color: black;
        padding: 3px 8px;
    }
</style>
